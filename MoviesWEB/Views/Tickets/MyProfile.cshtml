@model MoviesWEB.Models.System.UserProfile 

@{
    ViewData["Title"] = "My Profile";
}

<style>
    body {
        background-color: #242222;
        color: #fff;
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #fff4f4;
        margin-bottom: 20px;
    }

    .profile-container {
        max-width: 500px;
        margin: 30px auto;
        padding: 20px;
        background-color: #1e1e1e;
        border-radius: 10px;
    }

    .profile-row {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        border-bottom: 1px solid #333;
    }

    .profile-label {
        font-weight: bold;
        color: #ff4757;
    }

    .profile-value {
        color: #fff;
    }
</style>

<div class="profile-container">
    <h2>My Profile</h2>

    <div class="profile-row">
        <div class="profile-label">Name:</div>
        <div class="profile-value">@Model.Name</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">Phone:</div>
        <div class="profile-value">@Model.Phone</div>
    </div>

    <div class="profile-row">
        <div class="profile-label">Username:</div>
        <div class="profile-value">@Model.Username</div>
    </div>
</div>
