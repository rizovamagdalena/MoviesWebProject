@using System.Globalization
@model IEnumerable<MoviesWEB.Models.ViewTicket>

@{
    ViewData["Title"] = "All Tickets";
}

<style>
    body {
        background-color: #242222;
        color: #fff;
    }

    h2 {
        font-weight: bold;
        color: #fff4f4;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #1e1e1e;
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #333;
    }

    th {
        background-color: #2b2b2b;
        color: #ff4757;
        font-weight: 600;
    }

    tr:hover {
        background-color: #333;
        transform: scale(1.01);
        transition: all 0.2s ease;
    }

    .poster-img {
        width: 50px;
        height: 75px;
        object-fit: cover;
        border-radius: 5px;
    }
</style>

<h2>My Tickets</h2>

<table>
    <thead>
        <tr>
            <th>Poster</th>
            <th>Movie Name</th>
            <th>Username</th>
            <th>Watch Date</th>
            <th>Hall</th>
            <th>Seat</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(ticket.PosterPath))
                    {
                        <img src="@ticket.PosterPath" alt="@ticket.MovieName Poster" class="poster-img" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@ticket.MovieName</td>
                <td>@ticket.Username</td>
                <td>@ticket.WatchDate.ToString("dd/MM/yyyy HH:mm", CultureInfo.CreateSpecificCulture("en-GB"))</td>
                <td>@ticket.HallName</td>
                <td>@ticket.Seat</td>
                <td>@ticket.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US"))</td>
            </tr>
        }
    </tbody>
</table>
