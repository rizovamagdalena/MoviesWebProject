@model MoviesWEB.Models.CreateFutureMovie

@{
    ViewData["Title"] = "Create Future Movie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Create New Future Movie</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateFutureMovies">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Genres" class="form-label"></label>
                            <input asp-for="Genres" class="form-control" />
                            <span asp-validation-for="Genres" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Poster_Path" class="form-label"></label>
                            <input asp-for="Poster_Path" class="form-control" />
                            <span asp-validation-for="Poster_Path" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">⬅ Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
