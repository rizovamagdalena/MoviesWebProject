@model IEnumerable<MoviesWEB.Models.FutureMovie>

@{
    ViewData["Title"] = "FutureMovies";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Future Movies</h1>
        <a asp-action="CreateFutureMovies" class="btn btn-primary">➕ Add New Future Movie</a>
    </div>

    <div class="row g-4">
        @foreach (var movie in Model)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <img src="@movie.Poster_Path" class="card-img-top" alt="@movie.Name" style="height: 300px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Name</h5>
                        <p class="card-text"><strong>Genres:</strong> @movie.Genres</p>
                        <div class="mt-auto">
                            <a asp-action="DeleteFutureMovieConfirmed" asp-route-id="@movie.Id"
                               class="btn btn-danger w-100"
                               onclick="return confirm('Are you sure you want to delete this movie?');">
                                🗑 Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <p class="text-center mt-5">No future movies available.</p>
    }
</div>
